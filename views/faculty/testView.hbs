<div class="offset-md-1 col-12 col-md-9" id="view">
    <h2>{{message}}</h2>
    <form action="update" method="POST">

        <div class="form-group row">
            <label class="col-md-2 col-form-label" for="title">Title</label>
        </div>
        <div class="col-md-6 row">
            <input type="text" id="title" name="title" class="form-control" placeholder="Title" value="{{form.title}}" required>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label" for="dept">Department</label>
        </div>
        <div class="col-md-6 row">
            <input type="text" class="form-control" id="dept" name="dept" placeholder="Department" value="{{form.dept}}" required>
        </div>


        <div class="form-group row">
            <label class="col-md-2 col-form-label" for="duration">Duration</label>
        </div>
        <div class="col-md-6 row">
            <input type="number" class="form-control" id="duration" name="duration" placeholder="Duration in Minutes" value="{{form.duration}}" required>
        </div>


        <div class="form-group row">
            <label class="col-md-2 col-form-label" for="questions">Questions</label>
        </div>
        <div class="col-md-6 row">
            <input type="number" class="form-control" id="questions" name="questions" placeholder="questions" value="{{form.question}}" required>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label" for="marks">Marks</label>
        </div>
        <div class="col-md-6 row">
            <input type="number" class="form-control" id="marks" name="marks" placeholder="marks" value="{{form.marks}}" required>
        </div>


        <br>

        <div class="form-group row">
            <div class="col-sm-4">
                <button type="submit" class="btn btn-success btn-sm"><i class="far fa-list-alt"></i> Update</button>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm">
                <h5>
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                    Make sure to delete all the files before deleting the test!
                </h5>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-4">
                <i class="fa fa-file" aria-hidden="true"></i>
                <button type="button" class="btn btn-info btn-sm" onclick="window.location.href='/faculty/{{form.title}}/viewFiles'">

                    View File
                </button>
                <button type="submit" class="btn btn-danger btn-sm" onclick="window.location.href='/faculty/{{form.title}}/cancel'">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                    Delete Test
                </button>
            </div>
        </div>
    </form>
</div>